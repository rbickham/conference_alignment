<div class="page-header">
  <h1>
    Football Conferences
    <a href="/conferences/new" class="btn btn-lg btn-success">New Conference</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Logo</th>
        <th>Conference Name</th>
        <th>Conference Nickname</th>
        <th>Founded</th>
        <th>Members</th>
        <th>Headquarters</th>
        <th>Actions</th>
      </tr>

      <% @conferences.each do |conference| %>
      <tr>
        <td><img src="<%= conference.image_url %>" width="100" height="50"></td>
        <td><%= conference.conference_name %></td>
        <td><%= conference.conference_nickname %></td>
        <td><%= conference.founded %></td>
        <td><%= conference.members %></td>
        <td><%= conference.headquarters %></td>
        <td>
          <a href="/conferences/<%= conference.id %>" class="btn btn-primary">Show</a>
          <a href="/conferences/<%= conference.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_conference/<%= conference.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
