<div class="page-header">
  <h1>
    Schools
    <a href="/schools/new" class="btn btn-lg btn-success">New School</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Logo</th>
        <th>School Name</th>
        <th>School Nickname</th>
        <th>Conference Name</th>
        <th>Joined</th>
        <th>Actions</th>
      </tr>

      <% @schools.each do |school| %>
      <tr>
        <td><img src="<%= school.image_url %>" width="100" height="50"></td>        
        <td><%= school.school_name %></td>
        <td><%= school.school_nickname %></td>
        <td><%= school.conference_name %></td>
        <td><%= school.joined %></td>
        <td>
          <a href="/schools/<%= school.id %>" class="btn btn-primary">Show</a>
          <a href="/schools/<%= school.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_school/<%= school.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
