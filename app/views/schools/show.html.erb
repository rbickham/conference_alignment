<div class="page-header">
  <h3><%= @school.school_name %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Logo</dt>
      <dd><img src="<%= @school.image_url %>" width="100" height="50"></dd>

      <dt>School Name</dt>
      <dd><%= @school.school_name %></dd>

      <dt>School Nickname</dt>
      <dd><%= @school.school_nickname %></dd>

      <dt>Conference Name</dt>
      <dd><%= @school.conference_name %></dd>

      <dt>Joined</dt>
      <dd><%= @school.joined %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/schools" class="btn btn-primary">
        Back
      </a>
      <a href="/schools/<%= @school.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_school/<%= @school.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>



<ul class="list-group">
  <% @school.conference_histories.each do |conference_history| %>
    <li class="list-group-item">
      <a href="/conferences/<%= conference_history.conference_id %>">
        <%= conference_history.conference.conference_name %>
      </a>
    </li>
  <% end %>
</ul>
